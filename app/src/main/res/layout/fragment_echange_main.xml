<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/myFragmentContainer5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.exchange.ExchangeFragment">

        <LinearLayout
            android:id="@+id/LinearLayout60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout60"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tagServeur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Serveur : OFF"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"
                    android:textColor="#FF0000" />

                <Button
                    android:id="@+id/BtnServeur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DÃ©marrer Serveur" />

                <Button
                    android:id="@+id/BtnRecherche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recherche Appareils" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choisir un appareil"
                    android:textStyle="bold"
                    android:textColor="#9e00c1" />

                <TextView
                    android:id="@+id/tagAppareil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#595959" />

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout2"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
